{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "target": "es2021",
    "baseUrl": "./",
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*"
  ]
}
